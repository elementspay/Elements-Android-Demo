<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="ElementsPay.Button.Colored" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/primary_button_height</item>
        <item name="android:layout_marginLeft">@dimen/standard_margin</item>
        <item name="android:layout_marginRight">@dimen/standard_margin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:theme">@style/ElementsPay.PrimaryFlatButton</item>
    </style>

    <style name="ElementsPay.PrimaryFlatButton" parent="Theme.AppCompat.Light">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="colorAccent">@color/primaryColor</item>
    </style>

</resources>
